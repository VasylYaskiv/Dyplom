using UnityEngine;

public class Health : MonoBehaviour
{
    public float healthPoints = 20f;

    public void TakeDamage(float damage)
    {
        healthPoints -= damage;
        if (healthPoints <= 0)
        {
            Die();
        }
    }

    void Die()
    {
        // Можна додати анімацію смерті, ефекти, тощо.
        Destroy(gameObject);
    }
}
